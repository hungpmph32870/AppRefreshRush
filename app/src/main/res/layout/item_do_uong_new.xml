<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fiber_new"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:id="@+id/imgAnhDoUong"
            android:src="@drawable/logonuocgiaikhat"/>
    </LinearLayout>


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMaDoUong_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/tvTenDoUong_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvGiaDoUong_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:inputType="number"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tvdiachiDoUong_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#03A9F4"
            android:inputType="number"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:gravity="center"
                android:text="XÃ³a"
                android:backgroundTint="#FF5722"
                android:id="@+id/btnDeleteDoUong_new"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="150dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>